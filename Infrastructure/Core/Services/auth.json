{
  "openrpc": "1.2.6",
  "info": {
    "title": "Auth Service",
    "version": "1.0.0"
  },
  "methods": [
    {
      "name": "Login",
      "params": [
        { "name": "email", "schema": { "type": "string" } },
        { "name": "password", "schema": { "type": "string" } }
      ],
      "result": {
        "name": "loginResponse",
        "schema": {
          "type": "object",
          "properties": {
            "accessToken": { "type": "string" },
            "tokenType": { "type": "string" },
            "expiresIn": { "type": "integer" }
          }
        }
      }
    },
    {
      "name": "SignUp",
      "params": [
        { "name": "email", "schema": { "type": "string" } },
        { "name": "password", "schema": { "type": "string" } },
        { "name": "passwordConfirmation", "schema": { "type": "string" } },
        { "name": "name", "schema": { "type": "string" } }
      ],
      "result": {
        "name": "signUpResponse",
        "schema": {
          "type": "object",
          "properties": {
            "token": { "type": "string" }
          }
        }
      }
    }
  ]
}
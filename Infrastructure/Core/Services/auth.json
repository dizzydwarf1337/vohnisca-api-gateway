{
  "openrpc": "1.2.6",
  "info": {
    "title": "Auth Service",
    "version": "1.0.0"
  },
  "methods": [
    {
      "name": "login",
      "params": [
        { "name": "email", "schema": { "type": "string" } },
        { "name": "password", "schema": { "type": "string" } }
      ],
      "result": {
        "name": "LoginResponse",
        "schema": {
          "type": "object",
          "properties": {
            "access_token": { "type": "string" },
            "token_type": { "type": "string" },
            "expires_in": { "type": "integer" }
          }
        }
      }
    },
    {
      "name": "signUp",
      "params": [
        { "name": "email", "schema": { "type": "string" } },
        { "name": "password", "schema": { "type": "string" } },
        { "name": "password_confirmation", "schema": { "type": "string" } },
        { "name": "name", "schema": { "type": "string" } }
      ],
      "result": {
        "name": "SignUpResponse",
        "schema": {
          "type": "object",
          "properties": {
            "token": { "type": "string" }
          }
        }
      }
    }
  ]
}